<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#579E9D9D"
    android:gravity="center"
    android:previewImage="@mipmap/launcher_icon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ultimaAtualizacao"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/informacaoWidget"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/brTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imagemMoedaBrasil"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <ImageButton
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="#00FFFFFF"
                android:src="@android:drawable/ic_media_play" />

            <ImageView
                android:id="@+id/imagemMoedaCotacao"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <TextView
                android:id="@+id/valorBrasilParaMoeda"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/brFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imagemMoedaCotacao2"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="#00FFFFFF"
                android:src="@android:drawable/ic_media_play" />

            <ImageView
                android:id="@+id/imagemMoedaBrasil2"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <TextView
                android:id="@+id/valorMoedaParaBrasil"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>